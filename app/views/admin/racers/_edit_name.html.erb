<% form_remote_tag(:url => {:action => 'update_name', :id => @racer.to_param}) do -%>
  <div class="name">
    <%= text_field_tag 'name', @racer.name, :size => 30, 
          :class => 'edit_in_place_text_field', 
          :id => "racer_#{@racer.id}_name_text_field" %><%= 
        link_to_remote image_tag('/images/buttons/small_cancel.gif', :class => "cancel", :title => "Cancel editing"), 
          { :update => "racer_#{@racer.id}", 
            :url => { :action => "cancel_edit_name", :id => @racer.to_param},
            :success => "add_droppable_row_for('racer', #{@racer.id}); add_draggable_for('racer', #{@racer.id})" },
          { :class => "cancel" } %>
  </div>
<% end -%>
