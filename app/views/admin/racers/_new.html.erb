<td><%= image_tag('/images/icons/person.gif', 
				  :height => 16, :width => 16, :border => 0, :align => "absbottom", 
				  :id => "racer_icon_#{@racer.id}") %></td>
<td nowrap>
	<div class="inline">
	<%= form_remote_tag(:url => {:action => 'create'}, :update => 'new_row', :complete => evaluate_remote_response) %>
		<%= text_field_tag 'name', @racer.name, :size => 30, :class => 'edit_in_place_text_field' %>
	</div>
	<div class="inline">
			<%= link_to_function image_tag('/images/buttons/small_cancel.gif', 
			                               :height => 20, :width => 22, :border => 0, :align => 'absbottom'), 
				"Element.hide('new_row')" %>
			</div>
		<%= error_message_on 'racer', 'name' %>
		<%= render(:partial => 'error', :locals => { :error => @error, :message => @message }) if @error and @message %>
	</form>
</td>
<td colspan="7">