<tr valign="top" id="racer_<%= racer.id %>_row" class="<%= cycle("even", "odd") %>">
	<td><%= image_tag('/images/icons/person.gif', 
					  :height => 16, :width => 16, :border => 0, :align => "absbottom", 
					  :id => "racer_#{racer.id}") %></td>
	<td nowrap>
		<%= attribute(racer, 'name') %>
		<span id="message_<%= racer.id %>" ></span>
	</td>
	<td nowrap>
		<%= render(:partial => 'team', :locals => { :racer => racer }) %>
	</td>
	<td width="200">
		<%= render(:partial => 'aliases', :locals => { :racer => racer }) %>
	</td>
	<td align="right">
		<%= racer.road_number %>
	</td>
	<td align="right">
		<%= racer.xc_number %>
	</td>
	<td align="right">
		<%= racer.dh_number %>
	</td>
	<td align="right">
		<%= racer.ccx_number %>
	</td>
	<td align="center">
		<%= attribute(racer, 'member') %>
	</td>
	<td align="right" style="white-space: nowrap;">
    	<%= link_to 'Results', :controller => '/admin/results', :action => 'racer', :id => racer.id %>
		|
		<%= link_to 'Edit', :action => 'show', :id => racer.id %>
	</td>
 	<td><%= link_to_remote image_tag('/images/buttons/remove_solo.gif', :height => 22, :width => 22, :border => 0),
		:url => admin_racer_url(racer), :method => :delete,
		:confirm => "Really delete #{racer.name}?"
        %>
    </td>
</tr>

