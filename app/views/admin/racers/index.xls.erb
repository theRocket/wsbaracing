license	first_name	last_name	team_name	member_from	member_to	print_card	print_mailing_label	date_of_birth	occupation	street	city	state	zip	email	home_phone	work_phone	cell_fax	gender	road_category	track_category	ccx_category	mtb_category	dh_category	ccx_number	dh_number	road_number	singlespeed_number	track_number	xc_number	notes	created_at	updated_at
<%- for racer in @racers -%>
<%= racer.license -%>
	<%= racer.first_name -%>
	<%= racer.last_name -%>
	<%= racer.team_name -%>
	<%= racer.member_from.strftime('%m/%d/%Y') if racer.member_from -%>
	<%= racer.member_to.strftime('%m/%d/%Y') if racer.member_to -%>
	<%= racer.print_card ? '1' : '0' -%>
	<%= racer.print_mailing_label ? '1' : '0' -%>
	<%= racer.date_of_birth.strftime('%m/%d/%Y') if racer.date_of_birth -%>
	<%= racer.occupation -%>
	<%= racer.street -%>
	<%= racer.city -%>
	<%= racer.state -%>
	<%= racer.zip -%>
	<%= racer.email -%>
	<%= racer.home_phone -%>
	<%= racer.work_phone -%>
	<%= racer.cell_fax -%>
	<%= racer.gender -%>
	<%= racer.road_category -%>
	<%= racer.track_category -%>
	<%= racer.ccx_category -%>
	<%= racer.mtb_category -%>
	<%= racer.dh_category -%>
	<%= racer.ccx_number -%>
	<%= racer.dh_number -%>
	<%= racer.road_number -%>
	<%= racer.singlespeed_number -%>
	<%= racer.track_number -%>
	<%= racer.xc_number -%>
	<%= racer.notes.gsub(/[\n\r\t]/, ' ') if racer.notes -%>
	<%= racer.created_at.strftime('%m/%d/%Y') if racer.created_at -%>
<%# Last column is slightly different to ensure a line break -%>
	<%= if racer.updated_at then racer.updated_at.strftime('%m/%d/%Y') else "" end %>
<%- end -%>
