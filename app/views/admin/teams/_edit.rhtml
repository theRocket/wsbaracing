<span id="team_name_<%= @team.id %>">
	<div class="inline">
	<%= form_remote_tag(:url => {:action => 'update', :id => @team.to_param}, :update => "team_name_#{@team.id}") %>
		<%= text_field_tag 'name', @team.name, :size => 30, :class => 'edit_in_place_text_field' %>
	</div>
	<div class="inline">
			<%= link_to_remote image_tag('/images/buttons/small_cancel.gif', :height => 20, :width => 22, :border => 0, :align => 'absbottom'), 
				:update => "team_name_#{@team.id}", 
				:url => { :action => "cancel", :id => @team.to_param }%>
			</div>
		<%= error_message_on 'team', 'name' %>
	<%= end_form_tag %>
</span>
