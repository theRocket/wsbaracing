<% @page_title = "Ironman: #{@year}" %>

<% unless @years.empty? %>	
<%= tabs do |tabs|
  for year in @years
	tabs.add(year, :year => year)
  end
end -%>
<% end %>  

<% if @ironman.nil? or @ironman.races.empty? %>
No results for <%= @year %>
<br/>
<% end %>

<% unless @ironman.nil? or @ironman.races.empty? or @ironman.races.first.results.empty? %>
<%= tabs do |tabs|
	tabs.add('Previous', :page => @pages.current.previous)
	for page in @pages
		tabs.add(page.number, :page => page.number)
	end
	tabs.add('Next', :page => @pages.current.next)
end -%>

<div class="updatedon">Updated <%= @ironman.updated_at.to_formatted_s(:long) %></div>

<table class="base">
  <tr>
    <th><%= @ironman.date.year %> Ironman</th>
  </tr>
  <tr>
    <td><pre><%- for result in @results %>
<%= result.place.rjust(3) -%>
 <%= link_to(truncate(result.name), 
	 :controller => 'results',
     :action => 'competition',
     :competition_id => result.race.standings.event.to_param,
     :racer_id => result.racer.id) %><%= ' ' * (30 - truncate(result.name).length) -%>
   <%= truncate(result.racer.team_name, 40).ljust(40) -%>
   <%= number_with_precision(result.points, 0).rjust(6) -%>
<%- end -%></pre></td>
  </tr>
</table>
<br>
<%= link_to "[Previous]", { :page => @pages.current.previous } if @pages.current.previous %>
<%= "[Previous]" unless @pages.current.previous %>
<%= pagination_links @pages, :window_size => 50 %>
<%= link_to "[Next]", { :page => @pages.current.next } if @pages.current.next %>
<%= "[Next]" unless @pages.current.next %>
<br>
<% end %>  
