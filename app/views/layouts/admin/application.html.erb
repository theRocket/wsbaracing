<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">

<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>
      <%- if @page_title -%>
      <%= ASSOCIATION.short_name %>: <%= @page_title -%>
      <%- else -%>
      <%= ASSOCIATION.name %>
      <%- end %>
    </title>
    <%= stylesheet_link_tag 'racing_on_rails' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "data_grid" %>
  </head>

  <body onload="resize(); setFocus()" onresize="resize()">
  <div class="shadow_2">
    <div class="shadow_1">
      <div class="frame" id="frame">
        <div class="nav" id="top">
          <h1><%= link_to ASSOCIATION.name, :controller => 'home', :action => 'index' %></h1>
          <div class="breadcrumb"><%= link_to ASSOCIATION.short_name, :controller => 'home', :action => 'index' %></div>
        </div>
        <div class="content container" id="content">
          <%- if @show_tabs.nil? || @show_tabs -%>
          <div class="tabs">
            <%= link_to('Schedule', :controller => 'schedule', :action => 'index') %> |
            <%= link_to('Racers', :controller => 'racers', :action => 'index') %> |
            <%= link_to('Teams', :controller => 'teams', :action => 'index') %> |
            <%= link_to('Categories', :controller => 'categories', :action => 'index') %>
          </div>
          <%- end -%>
<%= yield %>
        </div>
        <div class="nav" id="bottom">
          <div class="breadcrumb"><%= link_to ASSOCIATION.short_name, :controller => 'home', :action => 'index' %></div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>