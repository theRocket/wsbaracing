<span class='editable' id="bar_category_<%= category.id %>">
	<% if category.bar_category %>
	<%= link_to_remote category.bar_category.name, 
		:update => "bar_category_#{category.id}", 
		:url => { :action => "edit_bar_category", :id => category.id }
	%>
	<% else %>
	<%= link_to_remote '&nbsp;' * 30, 
		:update => "bar_category_#{category.id}", 
		:url => { :action => "edit_bar_category", :id => category.id }
	%>
	<% end %>
</span>
